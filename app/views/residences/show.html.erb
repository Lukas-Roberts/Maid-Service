<div class="container p-4">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col" style="text-align:center">Address</th>
                <th scope="col" style="text-align:center">Bedrooms</th>
                <th scope="col" style="text-align:center">Bathrooms</th>
                <th scope="col" style="text-align:center">Request a Cleaning</th> 
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="text-align:center"><%= @residence.address %></td>
                <td style="text-align:center"><%= @residence.number_of_bedrooms %></td>
                <td style="text-align:center"><%= @residence.number_of_bathrooms %></td>
                <td style="text-align:center"><%= link_to "Edit residence information", edit_residence_path(@residence), class: 'btn btn-outline-info' %></td>
