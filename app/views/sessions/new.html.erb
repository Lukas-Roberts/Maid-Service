<h2>Please login below!</h2>
<%= form_tag('/login') do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %><br><br>

    <%= label_tag :password %>
    <%= password_field_tag :password %><br><br>

    <%= submit_tag "Login" %>
<% end %>
<h4>Don't have an account? Sign up <%= link_to "here", new_account_path %>!</h4>